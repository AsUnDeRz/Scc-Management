<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:foreground="?attr/selectableItemBackgroundBorderless">

    <asunder.toche.sccmanagement.custom.textview.TxtThin
        android:id="@+id/txtProdName"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/textView20"
                android:orientation="horizontal">

                <asunder.toche.sccmanagement.custom.textview.TxtThin
                    android:id="@+id/txtSalePrice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="false"
                    android:layout_weight="4"
                    android:gravity="right|center_vertical"
                    android:textSize="14sp" />

                <asunder.toche.sccmanagement.custom.textview.TxtThin
                    android:id="@+id/txtSaleVat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/textView22"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:textSize="14sp" />

                <asunder.toche.sccmanagement.custom.textview.TxtThin
                    android:id="@+id/txtSaleValues"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/textView23"
                    android:layout_weight="4"
                    android:gravity="right|center_vertical"
                    android:textSize="14sp" />

                <asunder.toche.sccmanagement.custom.textview.TxtThin
                    android:id="@+id/txtSaleDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:textSize="8sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/textView21"
                android:orientation="horizontal">

                <asunder.toche.sccmanagement.custom.textview.TxtThin
                    android:id="@+id/txtMediumPrice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="false"
                    android:layout_weight="3"
                    android:gravity="right|center_vertical"
                    android:textSize="14sp" />

                <asunder.toche.sccmanagement.custom.textview.TxtThin
                    android:id="@+id/txtMediumVat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/textView22"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:textSize="14sp" />

                <asunder.toche.sccmanagement.custom.textview.TxtThin
                    android:id="@+id/txtMediumDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:textSize="8sp" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
