<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootContentCompany"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless">

    <asunder.toche.sccmanagement.custom.textview.TxtMedium
        android:id="@+id/txtCompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_toRightOf="@+id/iconUser"
        android:lines="1"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <asunder.toche.sccmanagement.custom.textview.TxtThin
        android:id="@+id/txtContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtCompany"
        android:layout_toRightOf="@+id/txtCompany"
        android:lines="1"
        android:textSize="16sp"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:background="@color/light_gray" />

</RelativeLayout>
