<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:background="@android:color/white">

    <asunder.toche.sccmanagement.custom.textview.TxtMedium
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="วางบิล"
        android:textColor="@color/colorDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/btnAddTransactionWithCompany"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginEnd="8dp"
        android:tint="@color/colorDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_edit_black_24dp" />

    <asunder.toche.sccmanagement.custom.textview.TxtMedium
        android:id="@+id/txtBill"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="false"
        android:maxLines="1"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        app:layout_constraintEnd_toStartOf="@+id/btnAddTransactionWithCompany"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <asunder.toche.sccmanagement.custom.textview.TxtMedium
            android:id="@+id/textView10"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_round_table"
            android:gravity="center"
            android:text="สินค้า"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_weight="3">

                <asunder.toche.sccmanagement.custom.textview.TxtMedium
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_round_table"
                    android:gravity="center"
                    android:text="ราคาลูกค้า"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/textView20"
                    android:orientation="horizontal">

                    <asunder.toche.sccmanagement.custom.textview.TxtMedium
                        android:id="@+id/textView22"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="false"
                        android:layout_weight="4"
                        android:background="@drawable/bg_round_table"
                        android:gravity="center"
                        android:text="P"
                        android:textSize="12sp" />

                    <asunder.toche.sccmanagement.custom.textview.TxtMedium
                        android:id="@+id/textView23"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@+id/textView22"
                        android:layout_weight="5"
                        android:background="@drawable/bg_round_table"
                        android:gravity="center"
                        android:text="VAT"
                        android:textSize="10sp" />

                    <asunder.toche.sccmanagement.custom.textview.TxtMedium
                        android:id="@+id/textView24"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@+id/textView23"
                        android:layout_weight="4.5"
                        android:background="@drawable/bg_round_table"
                        android:gravity="center"
                        android:text="Q"
                        android:textSize="12sp" />

                    <asunder.toche.sccmanagement.custom.textview.TxtMedium
                        android:id="@+id/textView25"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_weight="4"
                        android:background="@drawable/bg_round_table"
                        android:gravity="center"
                        android:text="วันที่"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_weight="4">

                <asunder.toche.sccmanagement.custom.textview.TxtMedium
                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_round_table"
                    android:gravity="center"
                    android:text="ราคากลาง"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/textView21"
                    android:orientation="horizontal">

                    <asunder.toche.sccmanagement.custom.textview.TxtMedium
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="false"
                        android:layout_weight="3.5"
                        android:background="@drawable/bg_round_table"
                        android:gravity="center"
                        android:text="A"
                        android:textSize="12sp" />

                    <asunder.toche.sccmanagement.custom.textview.TxtMedium
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@+id/textView22"
                        android:layout_weight="3.5"
                        android:background="@drawable/bg_round_table"
                        android:gravity="center"
                        android:text="B"
                        android:textSize="10sp" />

                    <asunder.toche.sccmanagement.custom.textview.TxtMedium
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_weight="3"
                        android:background="@drawable/bg_round_table"
                        android:gravity="center"
                        android:text="วันที่"
                        android:textSize="12sp" />
                </LinearLayout>

            </RelativeLayout>

            <asunder.toche.sccmanagement.custom.textview.TxtMedium
                android:id="@+id/txtMedium13"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="6"
                android:background="@drawable/bg_round_table"
                android:gravity="center"
                android:text="NOTE" />
        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvHistoryTransaction"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</android.support.constraint.ConstraintLayout>