<?xml version="1.0" encoding="utf-8"?>
<me.thanel.swipeactionview.SwipeActionView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeProduct"
    android:layout_width="match_parent"
    android:clickable="false"
    android:layout_height="40dp"
    android:background="?colorPrimary">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <asunder.toche.sccmanagement.custom.button.BtnMedium
            android:id="@+id/btnEdit"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:background="#1C7CEB"
            android:text="@string/edit"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <asunder.toche.sccmanagement.custom.button.BtnMedium
            android:id="@+id/btnDelete"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:background="#FF644B"
            android:text="@string/delete"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
    </LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/headerProduct"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <asunder.toche.sccmanagement.custom.textview.TxtMedium
        android:id="@+id/txtProduct"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:textSize="14sp" />

    <asunder.toche.sccmanagement.custom.textview.TxtMedium
        android:id="@+id/txtPriceMedium"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center"
        android:textSize="14sp" />

    <asunder.toche.sccmanagement.custom.textview.TxtMedium
        android:id="@+id/txtVat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center"
        android:textSize="14sp" />

    <asunder.toche.sccmanagement.custom.textview.TxtMedium
        android:id="@+id/txtDate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center"
        android:textSize="14sp" />
</LinearLayout>
</me.thanel.swipeactionview.SwipeActionView>
