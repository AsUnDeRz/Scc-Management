<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <asunder.toche.sccmanagement.custom.textview.TxtBold
        android:id="@+id/txtHistory"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/tab_round"
        android:gravity="center_vertical"
        android:text="ประวัติ"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/headerProductHistory"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtHistory">

        <asunder.toche.sccmanagement.custom.textview.TxtMedium
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@drawable/bg_round_table"
            android:gravity="center"
            android:text="บริษัท"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <asunder.toche.sccmanagement.custom.textview.TxtMedium
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@drawable/bg_round_table"
            android:gravity="center"
            android:text="ราคาลูกค้า"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <asunder.toche.sccmanagement.custom.textview.TxtMedium
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@drawable/bg_round_table"
            android:gravity="center"
            android:text="VAT"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <asunder.toche.sccmanagement.custom.textview.TxtMedium
            android:id="@+id/txtMedium4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@drawable/bg_round_table"
            android:gravity="center"
            android:text="จำนวน"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <asunder.toche.sccmanagement.custom.textview.TxtMedium
            android:id="@+id/txtMedium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@drawable/bg_round_table"
            android:gravity="center"
            android:text="วันที่"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvCompanyPrefer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerProductHistory" />
</android.support.constraint.ConstraintLayout>