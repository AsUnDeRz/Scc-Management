<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <asunder.toche.sccmanagement.custom.button.BtnMedium
        android:id="@+id/btnSaveTransactionOnTop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_confirm"
        android:text="@string/save"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <asunder.toche.sccmanagement.custom.edittext.EdtMedium
        android:id="@+id/edtProductName"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_round_table"
        android:hint="เลือก บริษัท ..."
        android:paddingStart="8dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/btnSaveTransactionOnTop"
        app:layout_constraintStart_toStartOf="@+id/btnSaveTransactionOnTop"
        app:layout_constraintTop_toBottomOf="@+id/btnSaveTransactionOnTop" />

    <asunder.toche.sccmanagement.custom.edittext.EdtMedium
        android:id="@+id/edtImportFrom"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_round_table"
        android:hint="เลือก สินค้า ..."
        android:paddingStart="8dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/edtProductName"
        app:layout_constraintStart_toStartOf="@+id/edtProductName"
        app:layout_constraintTop_toBottomOf="@+id/edtProductName" />

    <asunder.toche.sccmanagement.custom.edittext.EdtMedium
        android:id="@+id/edtPackSize"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_round_table"
        android:hint="ราคากลาง"
        android:paddingStart="8dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/edtImportFrom"
        app:layout_constraintStart_toStartOf="@+id/edtImportFrom"
        app:layout_constraintTop_toBottomOf="@+id/edtImportFrom" />

    <asunder.toche.sccmanagement.custom.textview.TxtMedium
        android:id="@+id/txtMedium2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:text="ราคาลูกค้า"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtPackSize" />

    <ImageView
        android:id="@+id/imgNewSaleRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:tint="@color/colorDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtMedium2"
        app:srcCompat="@drawable/ic_edit_black_24dp" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMedium2">

        <asunder.toche.sccmanagement.custom.textview.TxtMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/bg_round_table"
            android:gravity="center"
            android:text="  ราคา  " />

        <asunder.toche.sccmanagement.custom.textview.TxtMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_round_table"
            android:gravity="center"
            android:text="VAT" />

        <asunder.toche.sccmanagement.custom.textview.TxtMedium
            android:id="@+id/txtMedium12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_round_table"
            android:gravity="center"
            android:text="จำนวน" />

        <asunder.toche.sccmanagement.custom.textview.TxtMedium
            android:id="@+id/txtMedium6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_round_table"
            android:gravity="center"
            android:text="      วันที่      " />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvSalePrice"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />
</android.support.constraint.ConstraintLayout>