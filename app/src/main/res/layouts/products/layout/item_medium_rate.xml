<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/bg_round_table"
    android:orientation="horizontal"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/txtMedium2">

    <asunder.toche.sccmanagement.custom.textview.TxtMedium
        android:id="@+id/txtMediumPrice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:gravity="center" />

    <asunder.toche.sccmanagement.custom.textview.TxtMedium
        android:id="@+id/txtMediumPriceNoVat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:gravity="center" />

    <asunder.toche.sccmanagement.custom.textview.TxtMedium
        android:id="@+id/txtMediumDate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:gravity="center"
        android:textSize="12sp" />

    <asunder.toche.sccmanagement.custom.textview.TxtMedium
        android:id="@+id/txtMediumNote"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3.5"
        android:gravity="left|center"
        android:maxLines="1"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:textSize="12sp" />
</LinearLayout>
