    <ViewStub
        android:id="@+id/stubProductAdd"
        android:inflatedId="@+id/layout_product_add"
        android:layout="@layout/fragment_product_add"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabProduct"  />
    <ViewStub
        android:id="@+id/stubLayoutInput"
        android:inflatedId="@+id/layout_input_add"
        android:layout="@layout/layout_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabProduct"  />
    <ViewStub
        android:id="@+id/stubMediumRate"
        android:inflatedId="@+id/layout_medium_rate"
        android:layout="@layout/layout_price_rate"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabProduct"  />
