<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <asunder.toche.sccmanagement.custom.edittext.EdtMedium
        android:id="@+id/edtTransactionNote"
        android:layout_width="0dp"
        android:layout_height="144dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_round_table"
        android:gravity="left"
        android:hint="กรอกข้อมูล รายละเอียด ซื้อ/ขาย ..."
        android:inputType="text"
        android:padding="8dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <asunder.toche.sccmanagement.custom.button.BtnMedium
        android:id="@+id/btnSaveTransactionOnBottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_confirm"
        android:text="@string/save"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtTransactionNote" />

    <asunder.toche.sccmanagement.custom.button.BtnMedium
        android:id="@+id/btnCancelTransaction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_cancel"
        android:text="@string/cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnSaveTransactionOnBottom"
        app:layout_constraintStart_toStartOf="@+id/btnSaveTransactionOnBottom"
        app:layout_constraintTop_toBottomOf="@+id/btnSaveTransactionOnBottom" />
</android.support.constraint.ConstraintLayout>