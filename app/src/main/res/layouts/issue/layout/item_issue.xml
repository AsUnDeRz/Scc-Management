<?xml version="1.0" encoding="utf-8"?>
<me.thanel.swipeactionview.SwipeActionView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeIssue"
    android:layout_width="match_parent"
    android:clickable="false"
    android:layout_height="40dp"
    android:background="?colorPrimary">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <asunder.toche.sccmanagement.custom.button.BtnMedium
            android:id="@+id/btnEdit"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:background="#1C7CEB"
            android:text="@string/edit"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <asunder.toche.sccmanagement.custom.button.BtnMedium
            android:id="@+id/btnDelete"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:background="#FF644B"
            android:text="@string/delete"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rootIssue"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless">

        <asunder.toche.sccmanagement.custom.textview.TxtMedium
            android:id="@+id/txtIssue"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:paddingStart="8dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txtCompany"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <asunder.toche.sccmanagement.custom.textview.TxtMedium
            android:id="@+id/txtCompany"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
</me.thanel.swipeactionview.SwipeActionView>
